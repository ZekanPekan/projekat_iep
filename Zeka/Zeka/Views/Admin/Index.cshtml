@model List<Zeka.Models.Auction>

@{
    ViewBag.Title = "Ready Auctions Page";
}



<div class="container-fluid content-row">
    @{
        int j = 0;
        for (int i = 0; i < Model.Count(); i += 4)
        {
            j = i;

            <div class="row mb-4">

                @while (j < i + 4 && j < Model.Count())
                {
                    <div class="col-sm-12 col-md-3 mb-3">
                        <div class="card h-100 text-center border-dark">
                            <div class="card-header"><strong>@Model[j].title</strong></div>
                            <img class="card img-responsive" src="data:image/png;base64,@Convert.ToBase64String(Model[j].picture, 0, Model[j].picture.Length)" alt="">
                            <div class="card-body d-flex flex-column">

                                <p id="token_selector_@Model[j].auction_id" class="card-text mt-auto"><b>@Model[j].token_price</b> tokens</p>
                                <p id="price_selector_@Model[j].auction_id" class="card-text mt-auto"><b>@Model[j].current_price @Model[j].currency</b></p>

                                @using (Html.BeginForm("StartAuction", "Admin", FormMethod.Post))
                                {
                                    <input type="hidden" name="key" value="@Model[j].auction_id" />
                                    <input type="submit" class="btn btn-primary mt-auto" value="Start auction" />
                                }

                            </div>
                        </div>
                    </div>



                    j++;
                }
            </div>


        }
    }
</div>

<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>


<!--Reference the SignalR library. -->
<script src="~/Scripts/jquery.signalR-2.4.0.min.js"></script>
<!--Reference the autogenerated SignalR hub script. -->
<script src="~/signalr/hubs"></script>
<!--Add script to update the page and send messages.-->
<script type="text/javascript">
    $(function () {
        // Declare a proxy to reference the hub.
        var auctionHub = $.connection.auctionHub;

        auctionHub.client.refreshPrice = function (auction_id, email, tokens, currency, price) {
            document.getElementById("token_selector_" + auction_id).innerHTML = '<b>' + tokens + '</b> tokens';
            document.getElementById("email_selector_" + auction_id).innerHTML = '<b>' + email + '</b>';
            document.getElementById("price_selector_" + auction_id).innerHTML = '<b>' + price + ' ' + currency + '</b>';
        };

        $.connection.hub.start().done(function () {
        });
    });
</script>
