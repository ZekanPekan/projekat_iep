@model List<Zeka.Models.Auction>

@{
    ViewBag.Title = "Home Page";
}



<div class="container-fluid content-row mt-5">
    @{
        int j = 0;
        for (int i = 0; i < Model.Count(); i += 4)
        {
            j = i;

            <div class="row mb-4">

                @while (j < i + 4 && j < Model.Count())
                {
                    <div class="col-auto mb-3">
                        <div class="card h-100 text-center border-dark">
                            <div class="card-header"><strong>@Model[j].title</strong></div>
                            <img class="card-img-top" src="data:image/png;base64,@Convert.ToBase64String(Model[j].picture, 0, Model[j].picture.Length)" alt="">
                            <div class="card-body d-flex flex-column">
   
                                <p class="card-text mt-auto"><b>@Model[j].token_price</b> <img class="img-fluid" src="https://i.postimg.cc/Vkk2nz1y/coins.png" style="width: 20px; height: 20px" /></p>  
                               
                            </div>
                        </div>
                    </div>
                 
                  

                  j++;
                }
            </div>


        }
    }
</div>

